<Window
    x:Class="Circular_ProgressBar.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Circular_ProgressBar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="475"
    Height="725"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Border
            Width="475"
            Height="725"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#2a2a2a"
            BorderBrush="#ffffff"
            BorderThickness="5"
            CornerRadius="20" />

        <TextBlock
            Margin="0,0,0,50"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontFamily="{StaticResource Roboto_Medium}"
            FontSize="28">
            <Run Foreground="#ffffff" Text="C# DESIGN" />
            <Run Foreground="#fef200" Text="PRO" />
        </TextBlock>

        <Grid
            Width="150"
            Height="150"
            Margin="0,0,0,115"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom">
            <ToggleButton
                x:Name="startBtn"
                Width="110"
                Height="110"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource PlayBtn_Style}" />
        </Grid>

        <Image
            Width="350"
            Height="350"
            Margin="0,60,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="{StaticResource Dial_Image}"
            Stretch="Uniform" />

        <Grid
            Width="290"
            Height="290"
            Margin="0,90,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Ellipse
                Width="210"
                Height="210"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Stroke="#4d4d4d"
                StrokeThickness="10" />
            <TextBlock
                x:Name="timerLabel"
                Width="100"
                Height="100"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Roboto_Light}"
                FontSize="50"
                Foreground="#fef200"
                Text="0"
                TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect
                        BlurRadius="30"
                        Direction="-90"
                        ShadowDepth="2"
                        Color="#fef200" />
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock
                Width="210"
                Height="20"
                Margin="0,60,0,0"
                HorizontalAlignment="Center"
                FontFamily="{StaticResource Rubik_Light}"
                FontSize="15"
                Foreground="#ffffff"
                Text="PERCENT"
                TextAlignment="Center" />
        </Grid>
    </Grid>
</Window>
